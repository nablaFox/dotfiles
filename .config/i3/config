# Global Settings
set $mod Mod4
set $mod2 Mod1
font pango:Open sans 11
floating_modifier $mod

# X11 Configuration
exec --no-startup-id setxkbmap -layout it
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms
exec --no-startup-id xrandr --mode 1920x1080 --output HDMI-1 --rate 75

# Startup Applications
exec_always --no-startup-id picom &
exec_always --no-startup-id mpd &
exec_always --no-startup-id dunst &
exec_always feh --no-fehbg --bg-scale --no-startup-id $HOME/Pictures/wallpapers/background.jpg
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Window Appearance
client.focused #e7e6fc #e7e6fc #F8F8F2 #e7e6fc #e7e6fc
client.focused_inactive #353535 #353535 #F8F8F2 #21222C #21222C
client.unfocused #171717 #171717 #353535 #171717

# Application Launchers
bindsym $mod+Return exec kitty
bindsym $mod+v exec kitty -e nvim
bindsym $mod+e exec kitty -e zsh -i -c ranger
bindsym $mod+c exec --no-startup-id chromium

# Window Management
bindsym $mod+q kill
bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle

# Layout Control
bindsym $mod2+v split h
bindsym $mod2+h split v
bindsym $mod2+Return fullscreen toggle
bindsym $mod2+q layout stacking
bindsym $mod2+w layout tabbed
bindsym $mod2+e layout toggle split

# Workspace Management
bindsym $mod+1 workspace number 1
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+Shift+2 move container to workspace number 2

bindsym $mod+3 workspace number 3
bindsym $mod+Shift+3 move container to workspace number 3

bindsym $mod+4 workspace number 4
bindsym $mod+Shift+4 move container to workspace number 4

bindsym $mod+5 workspace number 5
bindsym $mod+Shift+5 move container to workspace number 5

# Navigation
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Utilities & Tools
bindsym $mod+a exec --no-startup-id "rofi -show window -no-default-config -config ~/.config/rofi/main.rasi"
bindsym $mod+d exec --no-startup-id "rofi -show drun -no-default-config -config ~/.config/rofi/main.rasi"
bindsym $mod+s exec --no-startup-id "rofi -show drun -no-default-config -config ~/.config/rofi/full_screen.rasi"
bindsym $mod+z exec --no-startup-id "rofi-powermenu"
bindsym $mod+x exec --no-startup-id "rofi-screenshot"
bindsym $mod+t exec --no-startup-id i3-resurrect restore
bindsym $mod+y exec --no-startup-id i3-resurrect save

# System Controls
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Escape exec "i3-nagbar -t warning -m 'You Sure?' -B 'Yeah' 'i3-msg exit'"

# Ewww
bindsym $mod+p exec eww close bar
bindsym $mod+o exec eww open bar

exec_always --no-startup-id killall -q
exec --no-startup-id eww daemon
exec_always --no-startup-id eww open bar

bar {
    mode invisible
    output none
}

# Resize Mode
bindsym $mod+r mode "resize"

mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Gaps Configuration
set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)

mode "$mode_gaps" {
    bindsym o mode "$mode_gaps_outer"
    bindsym i mode "$mode_gaps_inner"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

default_border pixel 0
gaps inner 8
gaps outer 4

